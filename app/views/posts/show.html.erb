<p id="notice"><%= notice %></p>

<%= cache @post do %>
  <%= link_to 'Back', posts_path %>

  <h1><%= @post.title %></h1>

  <div class="hidden mt-2" data-controller="post-actions" data-post-actions-user-id-value="<%= @post.user_id %>">
    <%= link_to 'Edit', edit_post_path(@post) %> |
    <%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: true } %>
  </div>

  <p>Written by User <%= @post.user.id %></p>

  <%= @post.body %>
<% end %>

